generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Cliente {
  id          Int       @id @default(autoincrement())
  nome        String
  telefone    String    @unique
  email       String    @unique
  cpf         String    @unique
  cep         String    @db.Char(8)

  logradouro  String?
  bairro      String?
  localidade  String?
  uf          String?   @db.Char(2)

  ativo       Boolean   @default(true)

  pedidos     Pedido[]  

  @@map("clientes")
}

model Pedido {
  id          Int       @id @default(autoincrement())
  clienteId   Int
  cliente     Cliente   @relation(fields: [clienteId], references: [id])

  criadoEm    DateTime  @default(now())
  status      String

  @@map("pedidos")
}

model Produto {
  id          Int        @id @default(autoincrement())
  nome        String
  descricao   String
  categoria   Categoria
  preco       Decimal    @db.Decimal(10, 2)
  disponivel  Boolean    @default(true)

  @@map("produtos")
}

enum Categoria {
  LANCHE
  BEBIDA
  SOBREMESA
  COMBO
}
